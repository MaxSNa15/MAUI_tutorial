<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.GridLayout"
             Title="GridLayout">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition 
                Width="*"/>
        </Grid.ColumnDefinitions>

            <Button 
            Text="Click me"/>
            <Button 
            Text="MAUI"
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="2" />

    </Grid>
    
</ContentPage>