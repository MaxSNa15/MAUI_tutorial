<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2_Controles.InputControlDemo"
             Title="InputControlDemo">
    
    <StackLayout>

        <CheckBox
            IsChecked="True"
            />

        <Slider
            x:Name="slider1"
            Minimum="0"
            Maximum="100"
            Value="50"
            MinimumTrackColor="Yellow"
            MaximumTrackColor="Green"
            ThumbColor="Red"
            ValueChanged="slider1_ValueChanged"
            />

        <Label
            x:Name="lblSliderValue"
            Text="50"
            />

        <Stepper
            x:Name="stepper1"
            Minimum="0"
            Maximum="100"
            Increment="5"
            Value="50"
            ValueChanged="stepper1_ValueChanged"
            />

        <Switch
            IsToggled="True"
            />

        <DatePicker
            Date="2021-01-01"
            />

        <TimePicker
            Time="12:00"
            />
        

    </StackLayout>
</ContentPage>